<% if @errors.any? %>
  <div id="error_explanation">
      <h2>Login failed due to the following errors:</h2>
      <ul>
      <% @errors.values.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  </div>
<% end %>
<%= form_tag do %>
  <div class="field" >
    <%= label_tag :login %><br />
    <%= text_field_tag :login %>
  </div>
  <div class="field" >
    <%= label_tag :password %><br />
    <%= password_field_tag :password%>
  </div>
<div class="actions" >
  <%= submit_tag "Login" %>
</div>
<%= @login %><br/>
<%= @password %>
<% end %>