<h1>Current orders</h1>
<% Order.all.each do |o| %>
	<div class="section" style="float: left; padding-top: 5px;">
			<table class="orders_list" style="width: 100%;">	
				<thead>
					<th>Surname</th>
					<th>Address</th>
					<th>Phone</th>
                                        <th>Price</th>
				</thead>
				<tbody>
					<tr>
						<td><%= o.surname %></td>
						<td><%= o.address %></td>
						<td><%= o.phone %></td>
                                                <td><%= format_price(o.price) %></td>
						<td>
							<%= link_to('Details', admin_order_path(o.id)) %>
							<%= link_to('Finish', admin_order_path(o.id), :method => 'put') %>
						</td>
					</tr>
				</tbody>
			</table>
	</div>
<% end %>
